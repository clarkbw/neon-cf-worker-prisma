generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          Int      @id @default(autoincrement())
  name        String
  slug        String
  description String?
  completed   Boolean
  due_date    DateTime

  @@map("tasks")
}
